<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tencent="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onColumnCountChanged"
        android:layout_gravity="top"
        android:text="change column" />

    <com.tencent.temp.GridImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/grid_bg"
        android:columnCount="3"
        android:padding="10dp"
        tencent:drawables="@array/grid_image_view_contents"
        tencent:horizontalMargin="10dp"
        tencent:verticalMargin="10dp" />

</FrameLayout>