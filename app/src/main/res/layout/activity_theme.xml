<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?buttonTextBackground"
        android:focusable="true"
        android:onClick="onBlackClicked"
        android:text="Black"
        android:textColor="?buttonTextColor"
        android:textSize="?buttonTextSize" />

    <Button android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?buttonTextBackground"
        android:focusable="true"
        android:onClick="onWhiteClicked"
        android:text="White"
        android:textColor="?buttonTextColor"
        android:textSize="?buttonTextSize" />

    <ImageView android:id="@+id/image_src"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null"
        android:scaleType="fitXY" />

    <ImageView android:id="@+id/image_bin"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null"
        android:scaleType="fitXY" />

    <!--
    <ImageView android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/ring_drawable" />
    -->
</LinearLayout>