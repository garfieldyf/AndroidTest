<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Attributes format -->
    <attr name="maskColor" format="reference|color" />
    <attr name="borderColor" format="reference|color" />
    <attr name="cornerColor" format="reference|color" />
    <attr name="pageSize" format="dimension" />
    <attr name="textOffset" format="dimension" />
    <attr name="borderWidth" format="dimension" />
    <attr name="cornerWidth" format="dimension" />
    <attr name="cornerHeight" format="dimension" />
    <attr name="defaultImage" format="reference|color" />
    <attr name="scanningIndicator" format="reference|color" />
    <attr name="scanningIndicatorHeight" format="dimension" />
    <attr name="sampleSize" format="integer" />
    <attr name="maxCacheSize" format="integer" />
    <attr name="config">
        <enum name="alpha_8" value="0" />
        <enum name="rgb_565" value="1" />
        <enum name="argb_8888" value="2" />
    </attr>
    <attr name="autoMirrored">
        <enum name="none" value="0" />
        <enum name="horizontal" value="0x40000000" />
        <enum name="vertical" value="0x80000000" />
    </attr>

    <!-- BarcodeDecorView styleable -->
    <declare-styleable name="BarcodeDecorView">
        <attr name="android:text" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="textOffset" />
        <attr name="maskColor" />
        <attr name="borderColor" />
        <attr name="cornerColor" />
        <attr name="borderWidth" />
        <attr name="cornerWidth" />
        <attr name="cornerHeight" />
        <attr name="scanningIndicator" />
        <attr name="scanningIndicatorHeight" />
    </declare-styleable>

    <!-- Parameters styleable -->
    <declare-styleable name="Parameters">
        <attr name="config" />
        <attr name="sampleSize" />
    </declare-styleable>

    <!-- ImageBinder styleable -->
    <declare-styleable name="ImageBinder">
        <attr name="defaultImage" />
        <attr name="maxCacheSize" />
    </declare-styleable>

    <!-- PageScroller styleable -->
    <declare-styleable name="PageScroller">
        <attr name="pageSize" />
    </declare-styleable>

</resources>